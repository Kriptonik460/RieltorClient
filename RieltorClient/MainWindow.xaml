<Window x:Class="RieltorClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RieltorClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFB93737" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="118" Height="34" >
            <Button Content="Клиент" x:Name="ClientBtn" Click="ClientBtn_Click" Margin="5" Width="50" Height="25" Background="Transparent" Foreground="White"/>
            <Button Content="Риэлтор" x:Name="RealBtn" Click="RealBtn_Click" Margin="5" Width="50" Height="25" Background="Transparent" Foreground="White" />

        </StackPanel>
        <Frame Grid.Row="1" x:Name="MyFrame" NavigationUIVisibility="Hidden"  />
    </Grid>
</Window>
